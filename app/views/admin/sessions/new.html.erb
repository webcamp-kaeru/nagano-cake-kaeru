<div class = "container">
  <div class = "row">
    <div class = "col-5 ">
      <div class="mt-5" >
        <h2 class = "w-auto p-2 text-center" style="background-color: #eee;">管理者ログイン</h2>
      </div>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "layouts/error", obj: resource %>
  <div class = "row form-group mt-5">
    <label class = "col-2 offset-2 ">メールアドレス</label>
    <div class="col-5">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
    </div>
  </div>

  <div class = "row form-group">
    <label class = "col-2 offset-2 ">パスワード</label>
    <div class="col-5">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>


  <div class = "row">
    <div class = "col offset-4 mt-5 ">
      <div class="actions">
       <%= f.submit "ログイン", class: "btn btn-primary px-5 justify-content-center" %>
      </div>
    </div>
  </div>

<% end %>

<%= render "admin/shared/links" %>

</div>