<div class="container">
  <div class="p-3 mb-2">
    <h2 class="py-3">商品一覧</h2>
    <div class="offset-11 mb-3">
      <div class="iconbox">
        <%= link_to new_admin_product_path do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </div>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="font-weight-bold table-secondary">商品ID</th>
          <th class="font-weight-bold table-secondary">商品名</th>
          <th class="font-weight-bold table-secondary">税抜価格</th>
          <th class="font-weight-bold table-secondary">ジャンル</th>
          <th class="font-weight-bold table-secondary">ステータス</th>
        </tr>
      </thead>

      <tbody class="p-3 mb-2 bg-white">
        <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td style="text-decoration:underline;">
            <%= link_to admin_product_path(product), class:"text-dark" do %>
              <%= product.name %>
            <% end %>
          </td>
          <td><%= product.price %>円</td>
          <td><%= product.genre.name%></td>
          <% if product.sales_status==true %>
           <td class="text-success font-weight-bold">販売中</td>
          <% else %>
           <td class="text-danger font-weight-bold">販売停止中</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row justify-content-center">
      <div class="col-3">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>