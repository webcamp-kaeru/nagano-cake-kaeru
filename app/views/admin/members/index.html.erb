<div class="container">
  <div class="p-3 mb-2 bg-light">
  <h2 class="py-3 font-weight-bold">会員一覧</h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="font-weight-bold table-secondary">会員ID</th>
        <th class="font-weight-bold table-secondary">氏名</th>
        <th class="font-weight-bold table-secondary">メールアドレス</th>
        <th class="font-weight-bold table-secondary">ステータス</th>
      </tr>
    </thead>

    <tbody class="p-3 mb-2 bg-white">
      <% @members.each do |member| %>
      <tr>
        <td>
          <%= member.id %>
        </td>
        <td style="text-decoration:underline;">
          <%= link_to admin_member_path(member), class:"text-dark" do %>
            <%= member.last_name %><%= member.first_name %>
          <% end %>
        </td>
        <td>
          <%= member.email %>
        </td>
        <% if member.is_deleted==true %>
       <td class="text-secondary font-weight-bold">退会</td>
        <% else %>
       <td class="text-success font-weight-bold">有効</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @members %>
 </div>
</div>