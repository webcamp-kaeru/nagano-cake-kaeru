<h1>ジャンル一覧・追加</h1>

<div>
 <%= form_with model :@genre do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %>
  <%= f.submit "新規登録", class: "btn btn-success" %>
 <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_genre_path(genre), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

