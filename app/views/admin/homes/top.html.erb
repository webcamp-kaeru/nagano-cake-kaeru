<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), order_path(order) %></td>
        <td><%= order.shipping_name %></td>
        <td>
          <% order.order_products.each do |order_product| %>
            <% @total_quantity = @total_quantity + order_product.quantity %>
          <% end %>
              <%= @total_quantity %>
              <% @total_quantity = 0 %>
        </td>
        <td><%= order.order_status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>
