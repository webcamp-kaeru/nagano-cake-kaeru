<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div>
    <label>名前</label>
    <div class="field">
      <%= f.label :last_name, "（姓）" %><br />
      <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
    </div>

    <div class="field">
      <%= f.label :first_name, "（名）" %><br />
      <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
  　</div>
  </div>

  <div>
    <label>フリガナ</label>
    <div class="field">
      <%= f.label :last_name_kana, "（セイ）" %><br />
      <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
    </div>

    <div class="field">
      <%= f.label :first_name_kana, "（メイ）" %><br />
      <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
  　</div>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@examole.com" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %><br />
    <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号（ハイフンなし）" %><br />
    <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（6文字以上）" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p>
  <%= link_to "こちら", new_member_session_path %>
  からログインしてください。
</p>
