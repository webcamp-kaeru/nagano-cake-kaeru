<div class="container">
  <div class="p-3 mb-2">
  <h2 class="py-3 font-weight-bold">配送先編集</h2>

  <%= form_with model: @delivery_address, url: delivery_address_path(@delivery_address), method: :patch do |f| %>
  <%= render "layouts/error", obj: @delivery_address %>
    <div class="form-group row align-items-center">
    <label class="col-lg-2 col-form-label">郵便番号<br>（ハイフンなし）</label>
    <div class="col-lg-3">
      <%= f.text_field :postal_code ,class: "form-control"%>
    </div>
    </div>

    <div class="form-group row align-items-center">
    <label class="col-lg-2 col-form-label">住所</label>
    <div class="col-lg-10">
      <%= f.text_field :address ,class: "form-control"%>
    </div>
    </div>

    <div class="form-group row align-items-center">
    <label class="col-lg-2 col-form-label">宛名</label>
    <div class="col-lg-3">
      <%= f.text_field :shipping_name ,class: "form-control"%>
    </div>
    </div>
    <div class="col-md-5 text-center">
    　<%= button_tag(type: "submit", class: "btn bgleft shadow-sm ml-2") do %>
        <span>
          <i class="fas fa-save"></i> 変更を保存
        </span>
      <% end %>
    </div>
  <% end %>
  </div>
</div>

