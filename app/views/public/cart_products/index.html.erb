<div class="container">
  <div class="row my-3 text-center">
    <div class="col-lg-4">
      <h2>ショッピングカート</h2>
    </div>

    <div class="col-lg-3 offset-lg-5">
       <%= link_to "カートを空にする", cart_products_destroy_all_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr class="bg-white">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_products.each do |cart_product| %>
        <%= render 'layouts/error', obj: cart_product %>
      <% @total_price = @total_price + cart_product.subtotal %>
        <tr>
          <td><%= cart_product.product.name %></td>
          <td><%= cart_product.product.sum_of_order_price %></td>
          <td>
            <%= form_with model: cart_product, url: cart_product_path(cart_product), method: :patch do |f| %>
              <%= f.select :quantity , *[1..10] %>
              <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td><%= cart_product.subtotal %></td>
          <td><%= link_to "削除する", cart_product_path(cart_product), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-3 text-center mb-4">
      <%= link_to "買い物を続ける", products_path, class: "btn btn-primary" %>
    </div>

    <div class="col-md-3 offset-md-6">
      <table class="table">
        <tr>
          <th>合計金額</th>
          <td><%= @total_price %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 mx-auto text-center">
      <% if current_member.cart_products.exists? %>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

