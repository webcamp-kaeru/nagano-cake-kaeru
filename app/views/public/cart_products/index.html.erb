<div class="container">
  <div class="row my-3">
    <div class="col-md-4 text-center">
      <h2>ショッピングカート</h2>
    </div>

    <div class="col-md-3 offset-md-5 text-center">
       <%= link_to "カートを空にする", cart_products_destroy_all_path, class: "btn btn-danger" %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_products.each do |cart_product| %>
      <% @total_price = @total_price + cart_product.subtotal %>
      <tr>
        <td><%= cart_product.product.name %></td>
        <td><%= cart_product.product.sum_of_order_price %></td>
        <td><%= cart_product.quantity %></td>
        <td><%= cart_product.subtotal %></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-3 text-center">
      <%= link_to "買い物を続ける", products_path, class: "btn btn-primary" %>
    </div>

    <div class="col-md-3 offset-md-6">
      <table class="table">
        <tr>
          <th>合計金額</th>
          <td><%= @total_price %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 mx-auto text-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

