<h2>注文詳細</h2>
<div class = "container">
  <div class = "rol">
    <div class = "col-md-7">
      <h4>注文情報</h4>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          <%= @order.shipping_postal_code %><br/>
          <%= @order.shipping_adress %><br/>
          <%= @order.shipping_name %>
        </td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td><%= @order.order_status %></td>
      </tr>
    </div>
    <div class = "col-md-3 offset-md-2">
      <h4>請求情報</h4>
      <tr>
        <td>商品合計</td>
        <td><%= @order.sum_of_order_price %></td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= @order.shipping %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <th><%= @order.billing_amount %></th>
      </tr>
    </div>
  </div>
  <div class = "rol">
    <div class = "col-md-11 offset-md-1">
      <h4>注文内容</h4>
        <thead>
          <tr>
            <td>商品</td>
            <td>単価（税込）</td>
            <td>個数</td>
            <td>小計</td>
          </tr>
        </thead>
        <tbody>
          <% @order_products.each do |order_product| %>
            <tr>
              <td><%= @order.order_product.product.name %></td>
              <td><%= @order.order_product.product.price %></td>
              <td><%= @order.order_product.quantity %></td>
              <td><%= @order.order_product.quantity_price %></td>
            </tr>
        </tbody>
    </div>
  </div>
</div>