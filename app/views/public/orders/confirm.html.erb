<h1>注文情報確認</h1>

<div>
  <table>
    <tr>
      <td>商品名</td>
      <td>単価(税込）</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
    <tr>
      <% @cart_products.each do |cart_product| %>
      <td>
        <%= image_tag cart_product.product.product_image %>
        <%= cart_product.product.name %>
      </td>
      <td><%= cart_product.product.sum_of_order_price %></td>
      <td><%= cart_product.quantity %></td>
      <td><%= cart_product.subtotal %></td>
      <% end %>
    </tr>
  </table>
</div>

<div>
  <table>
    <tr>
      <td>送料</td>
      <td><%= @order.shipping %></td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td></td>
    </tr>
      <td>請求金額</td>
      <td><%= @order.billing_amount %></td>
  </table>
</div>

<div>
  <table>
    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>お届け先</th>
      <td>
        <%= @order.address_display_order %></br>
        <%= @order.shipping_name %>
      </td>
    </tr>
  </table>
</div>

<%= form_with model: @order, local:true do |f| %>
  <%= f.hidden_field :member_id, value: current_member.id %>
  <%= f.hidden_field :shipping %>
  <%= f.hidden_field :shipping_postal_code %>
  <%= f.hidden_field :shipping_address %>
  <%= f.hidden_field :shipping_name %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :order_status, value: 0 %>
  <%= f.hidden_field :billing_amount %>
  <%= f.submit "注文を確定する" %>
<% end %>