<h2>注文履歴一覧</h2>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td>
          <%= order.shipping_postal_code %><br/>
          <%= order.shipping_adress %><br/>
          <%= order.shipping_name %>
        </td>
      <% @order_products.each do |order_product| %>
        <td><%= order.order_product.product.name %></td>
        <td><%= order.billing_amount %></td>
        <td><%= order.order_status %></td>
        <%= link_to "表示する", order_path(order) %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

