<h1>注文情報入力</h1>
<%= form_with model: @order, local:true, url: orders_confirm_path do |f| %>
  <h2>支払い方法</h2>
  <div class="form-group">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></br>
    <%= f.radio_button :payment_method,  Order.payment_methods.key(1) %>
    <%= f.label :payment_method,  Order.payment_methods_i18n[:transfer] %>
  </div>
  <h2>お届け先</h2>
  <div class="form-group">
    <div>
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :select_address,"ご自身の住所" %></br>
      <span>〒<%= current_member.postal_code %> <%= current_member.address %></span></br>
      <%= current_member.last_name %><%= current_member.first_name %>
    </div>

    <div>
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :select_address,  "登録済住所から選択" %></br>
      <%= f.select :address_id, options_from_collection_for_select(@delivery_addresses, :id, :address_display) %>
    </div>

    <div>
      <%= f.radio_button :select_address, 3 %>
      <%= f.label :select_address,  "新しいお届け先" %></br>
      <%= f.label :shipping_postal_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :shipping_postal_code, placeholder: "0000000" %></br>
      <%= f.label :shipping_address, "住所" %>
      <%= f.text_field :shipping_address, placeholder: "東京都渋谷区代々木東京都渋谷区代々木神園町0-0" %></br>
      <%= f.label :shipping_name, "宛名" %>
      <%= f.text_field :shipping_name, placeholder: "令和道子" %>
    </div>

    <%= f.submit "確認画面に進む" %>
  </div>

<% end %>